        <TextBox HorizontalAlignment="Left" Margin="110,118,0,0" Grid.Row="1" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Grid.Column="1" Height="18"/>
        <Button Grid.Column="1" Content="Valider" HorizontalAlignment="Center" Margin="0,145,0,0" Grid.Row="1" VerticalAlignment="Top" Width="316" Click="Valider_Click" Height="20"/>

    </Grid>
</Window>
